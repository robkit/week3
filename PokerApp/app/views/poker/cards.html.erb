<style type="text/css">
	h1,p,body{font-family:"Helvetica";}

	h1.title {
	 font-size: 40px; 
	 color: #404040;
	}
	
	a {
	 text-decoration: none; 
	 color: #03c
	}
	
	a:hover {
	 text-decoration: underline; 
	 color: #000080
	}

	img {
	 height: 285px; 
	 padding-right: 20px;
	}
	
	#page {
     width: 1150px;
     margin: 0;
     margin-left: auto;
     margin-right: auto;
    }

    #cards {
     border-top: 2px solid #800000;
     padding-top: 50px
    }

</style>

<div id="page">
	<h1 class="title">Poker Cards</h1>
	<p><a href="http://localhost:3000/poker">Refresh this page to deal a new hand.</a></p>
	<div id="cards">
		<% @poker.each do |c| %>
		<img alt=<%= "#{c}" %> src=<%= "assets/#{c}.png" %> />
		<% end %>
	</div>
</div>